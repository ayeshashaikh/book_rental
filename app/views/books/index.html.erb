<h1>Listing books</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Author</th>
    <th>Branch</th>
    <th>Publication</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
	<% if book.user_id == current_user.id%>
	  <tr>
	    <td><%= book.name %></td>
	    <td><%= book.price %></td>
	    <td><%= book.author %></td>
	    <td><%= book.branch %></td>
	    <td><%= book.publication %></td>
	    <td><%= link_to 'Show', book %></td>
	    <td><%= link_to 'Edit', edit_book_path(book) %></td>
	    <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	  </tr>
	<% else %>
		<p class="text-error"> No records found </p> 
	<% end %>
<% end%>
</table>

<br />

